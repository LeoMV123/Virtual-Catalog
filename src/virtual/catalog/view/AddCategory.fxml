<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="virtual.catalog.controller.AddCategoryController">
   <children>
      <VBox alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="340.0">
         <children>
            <Label text="Category">
               <VBox.margin>
                  <Insets bottom="21.0" left="21.0" right="21.0" top="21.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="textFieldName" promptText="Name">
               <VBox.margin>
                  <Insets bottom="21.0" left="21.0" right="21.0" top="21.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnAddCategory" mnemonicParsing="false" onMouseClicked="#ButtonAddCategory" text="Add category">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <ComboBox fx:id="comboBoxListOfCategories" prefHeight="25.0" prefWidth="265.0" promptText="List of categories">
               <VBox.margin>
                  <Insets bottom="21.0" left="21.0" right="21.0" top="21.0" />
               </VBox.margin>
            </ComboBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
