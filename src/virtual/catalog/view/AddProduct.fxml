<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="virtual.catalog.controller.AddProductController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="340.0">
         <children>
            <Label text="Product">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Name" />
            <TextField fx:id="textFieldName" promptText="Name">
               <VBox.margin>
                  <Insets bottom="8.0" left="21.0" right="21.0" top="8.0" />
               </VBox.margin>
            </TextField>
            <Label text="Price" />
            <TextField fx:id="textFieldPrice" promptText="Price">
               <VBox.margin>
                  <Insets bottom="8.0" left="21.0" right="21.0" top="8.0" />
               </VBox.margin>
            </TextField>
            <ComboBox fx:id="comboBoxCategory" prefWidth="150.0" promptText="Select category" />
            <TextArea fx:id="textAreaDescription" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="8.0" left="21.0" right="21.0" top="8.0" />
               </VBox.margin>
            </TextArea>
            <Button fx:id="btnAddImage" mnemonicParsing="false" onMouseClicked="#ButtonAddImage" text="Add image">
               <VBox.margin>
                  <Insets bottom="8.0" top="8.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnAddProduct" mnemonicParsing="false" onMouseClicked="#ButtonAddProduct" text="Add product">
               <VBox.margin>
                  <Insets bottom="8.0" top="8.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
