<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="virtual.catalog.controller.AddCategoryController">
   <children>
      <VBox alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="480.0">
         <children>
            <Label text="Category">
               <VBox.margin>
                  <Insets bottom="21.0" left="21.0" right="21.0" top="21.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="textFieldName" promptText="Name">
               <VBox.margin>
                  <Insets bottom="21.0" left="21.0" right="21.0" top="21.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnAddCategory" mnemonicParsing="false" onMouseClicked="#ButtonAddCategory" text="Add category">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <TableView fx:id="tableViewCategory" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="columnID" prefWidth="35.0" text="ID" />
                <TableColumn fx:id="columnName" prefWidth="222.0" text="Name" />
                  <TableColumn fx:id="columnOptions" prefWidth="171.0" text="Options" />
              </columns>
               <VBox.margin>
                  <Insets bottom="21.0" left="21.0" right="21.0" top="21.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
